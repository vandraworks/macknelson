/* CSS RESET
http://meyerweb.com/eric/tools/css/reset/
   v2.0 | 20110126
   License: none (public domain)
*/

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block
body
  line-height 1
ol, ul
  list-style none
blockquote, q
  quotes none
blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none
table
  border-collapse collapse
  border-spacing 0
button
  background none
  border 0
  font-size inherit
  font-weight inherit
  box-sizing inherit
input
  all unset
/* clears the ‘X’ from Internet Explorer */
input[type=search]::-ms-clear { display: none; width : 0; height: 0; }
input[type=search]::-ms-reveal { display: none; width : 0; height: 0; }
/* clears the ‘X’ from Chrome */
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration { display: none; }
// Mixins, Functions, and Global Variables

flex-center()
  display flex
  justify-content center
  align-items center
  flex-flow column
flex-grid()
  display flex
  justify-content space-between
  align-items center
  width 100%
sg-gradient-text()
  font-weight 600
  background -webkit-linear-gradient(left, sg-orange, sg-gold)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
background-index()
  background sg-offwhite
  position relative
  z-index 1
sg-orange = #f26625
sg-gold = #fecb09
sg-offwhite = #fcfcfc
sg-black = #111
sg-offblack = #252525
sg-gradient = linear-gradient(sg-orange, sg-gold)
bigHeader = 4.5rem
mediumHeader = 3.75rem
smallHeader = 2.5rem
subheader = 1.625rem
bodyCopy =  1.05rem
smallCopy = 1rem
bigSpacing = 200px
mediumSpacing = 100px
smallSpacing = 50px
subspacing = 25px
dropshadow-light = 0px 1px 4px rgba(0, 0, 0, 0.05)
dropshadow-left = -3px -2px 4px rgba(0, 0, 0, 0.25)
dropshadow-medium = 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

ms-primary = #252525
ms-secondary = #000

:root
  --primary-color ms-primary
  --secondary-color ms-secondary

anim-TextBarReveal()
    -webkit-animation BarReveal 1.5s
    animation BarReveal 1.5s
    -webkit-animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)
    animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)

anim-TextSlideUp()
    -webkit-animation TextSlideUp 1.5s
    animation TextSlideUp 1.5s
    -webkit-animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)
    animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)

anim-Zoom(animDuration, animDelay)
    -webkit-animation Zoom animDuration
    animation Zoom animDuration
    -webkit-animation-delay animDelay
    animation-delay animDelay
    -webkit-animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)
    animation-timing-function cubic-bezier(0.08, 0.82, 0.17, 1)

anim-FadeOut(animDuration, animDelay)
  -webkit-animation FadeOut animDuration
  animation FadeOut animDuration
  -webkit-animation-delay animDelay
  animation-delay animDelay
  -webkit-animation-timing-function ease
  animation-timing-function ease

anim-FadeIn(animDuration, animDelay)
  -webkit-animation FadeIn animDuration
  animation FadeIn animDuration
  -webkit-animation-delay animDelay
  animation-delay animDelay
  -webkit-animation-timing-function ease
  animation-timing-function ease

@-webkit-keyframes FadeOut
  0%
    opacity 1
  100%
    opacity 0

@keyframes FadeOut
  0%
    opacity 1
  100%
    opacity 0

@-webkit-keyframes FadeIn
  0%
    opacity 0
  100%
    opacity 1

@keyframes FadeIn
  0%
    opacity 0
  100%
    opacity 1

@-webkit-keyframes TextSlideUp
  0%
    transform translateY(150px)
    opacity 0
  100%
    transform translateY(0px)
    opacity 1

@keyframes TextSlideUp
  0%
    transform translateY(150px)
    opacity 0
  100%
    transform translateY(0px)
    opacity 1
@-webkit-keyframes TextBarReveal
  0%
    transform translateY(150px)
    opacity 0
  100%
    transform translateY(0px)
    opacity 1

@keyframes TextBarReveal
  0%
    transform translateY(150px)
    opacity 0
  100%
    transform translateY(0px)
    opacity 1

@-webkit-keyframes Zoom
  0%
    transform scale(1.3)
  100%
    transform scale(1)

@keyframes Zoom
  0%
    transform scale(1.3)
  100%
    transform scale(1)

// Global Styles

html
  scroll-behavior smooth
  background #fcfcfc
  position relative
body
  font-family articulat-cf, sans-serif
  color var(--primary-color)
a
  color inherit
  text-decoration none
  transition .3s all
  &:hover
    color var(--primary-color)

::-webkit-scrollbar
  width 7px
  height 7px

::-webkit-scrollbar-thumb
  background var(--primary-color)
  border-radius 0px

::-webkit-scrollbar-thumb:hover
  background #B3AFB3

::-webkit-scrollbar-track
  background #F0F0F0
  border-radius 0px
  box-shadow inset 0px 0px 0px 0px #F0F0F0

::-webkit-input-placeholder
  color var(--primary-color)
::-moz-placeholder
  color var(--primary-color)
:-ms-input-placeholder
  color var(--primary-color)
:-moz-placeholder
  color var(--primary-color)

button
  cursor pointer
section
  background-index()
b, strong
  font-weight 600
i, em
  font-style italic
.blockScroll
  overflow hidden
.carousel
  padding 0
.svgSettings
  position absolute !important
  height 1px
  width 1px
  overflow hidden
.sgGradientStop1
  stop-color sg-orange
.sgGradientStop2
  stop-color sg-gold
.bigHeader
  font-size bigHeader
.mediumHeader
  font-size mediumHeader
.smallHeader
  font-size smallHeader
.subheader
  font-size subheader
.bodyCopy
  font-size bodyCopy
  line-height 1.3rem
.smallCopy
  font-size smallCopy
.sgGradient
  font-weight 600
  background -webkit-linear-gradient(left, sg-orange, sg-gold)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
.sgBgGradient
  background linear-gradient(90deg, sg-orange 0%, sg-gold 100%), sg-gold;

@media screen and (max-width 650px)
  .bigHeader
    font-size (bigHeader / 1.25)
  .mediumHeader
    font-size (mediumHeader / 1.25)
  .smallHeader
    font-size (smallHeader / 1.25)

@media screen and (max-width 450px)
  .bigHeader
    font-size (bigHeader / 2)
  .mediumHeader
    font-size (mediumHeader / 2)
  .smallHeader
    font-size (smallHeader / 2)
.sgButton
  background sg-gradient
  padding 10px 25px
  display inline-block
  width max-content
  font-weight 600
  margin-right subspacing
  border-radius 10px
  text-transform uppercase
  transition all .3s ease
  position relative
  overflow hidden
  font-size bodyCopy
  span
    position relative
    z-index 2
    color sg-offwhite
  &:after
    content ''
    position absolute
    width 100%
    height 100%
    background linear-gradient(90deg, sg-orange 0%, sg-gold 100%), sg-gold;
    left 0
    top 0
    transition all .3s
    z-index 1
    opacity 0
  &:hover
    span
      color sg-offwhite
    &:after
      opacity 1
.msButton
  background sg-offwhite
  padding 10px 25px
  display inline-block
  width max-content
  font-weight 600
  margin-right subspacing
  border 2px solid var(--primary-color)
  transition all .3s ease
  position relative
  overflow hidden
  font-size bodyCopy
  cursor pointer
  span
    position relative
    z-index 2
    color var(--primary-color)
    transition all .3s ease
  &:after
    content ''
    position absolute
    width 100%
    height 100%
    background var(--primary-color)
    left 0
    top 0
    transition all .3s
    z-index 1
    opacity 0
  &:hover
    span
      color sg-offwhite
    &:after
      opacity 1
.preloadScrollDisable
  overflow hidden
main
  width 100%
ol
  list-style decimal
ul
  list-style disc
  margin-left 20px
#pageTransition
  display none
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 99
  background var(--primary-color)

.preload-active
  anim-Zoom(2.5s, 3s)
.fadeOut-active
  #pageTransition
    display block
    anim-FadeIn(.25s, 0)
.fadeIn-active
  #pageTransition
    display block
    anim-FadeOut(3s, 0)

.lity-container
  padding small
